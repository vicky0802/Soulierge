<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_bottom_menu"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:background="@color/grey_sec"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bottom_feed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_bottom_menu"
            android:scaleType="centerInside"
            android:tint="@color/dark_grey"
            app:srcCompat="@drawable/home_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_bottom_menu"
            android:textColor="@color/dark_grey"
            android:text="@string/ph_home" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_events"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_bottom_menu"
            android:scaleType="centerInside"
            android:tint="@color/dark_grey"
            android:padding="2dp"
            app:srcCompat="@drawable/search_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_bottom_menu"
            android:textColor="@color/dark_grey"
            android:text="@string/ph_events" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_add_credits"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_bottom_menu"
            android:scaleType="centerInside"
            android:tint="@color/dark_grey"
            app:srcCompat="@drawable/add_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_bottom_menu"
            android:textColor="@color/dark_grey"
            android:text="@string/ph_add_credits" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_upcoming"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_bottom_menu"
            android:background="?selectableItemBackground"
            android:scaleType="centerInside"
            android:tint="@color/dark_grey"
            app:srcCompat="@drawable/upcoming_event_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_bottom_menu"
            android:textColor="@color/dark_grey"
            android:text="@string/ph_upcoming" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_bottom_menu"
            android:background="?selectableItemBackground"
            android:scaleType="centerInside"
            android:tint="@color/dark_grey"
            app:srcCompat="@drawable/settings_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_bottom_menu"
            android:textColor="@color/dark_grey"
            android:text="@string/ph_profile" />
    </LinearLayout>


</LinearLayout>